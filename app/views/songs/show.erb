
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><h1><%= @song.song_title %></h1></span>
        <p>
          <%= @song.album %>
        </p>
      </div>
      <div class="card-action">
        <p>  Artist: <%= @song.artist %></p>
      </div>
    </div>
  </div>
</div>

<form method="post" action="/reviews">
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @review && @review.title %>">
  </div>
  <div>
    <label>Review:</label>
    <input type="text" name="review" value="<%= @review && @review.review %>">
  </div>
  <input type="hidden" name="song_id" value="<%= @song.id %>">
  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
  </button>
</form>
<br>

<a class="waves-effect waves-light btn" href='/songs'>Back to all Songs</a>

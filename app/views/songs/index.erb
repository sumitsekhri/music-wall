<% @songs.each do |song| %>
  <div class="song">
    <h4><a href="/songs/<%= song.id %>"><%= song.song_title %></a><span class="artist"> - <%= song.artist %></span></h4>
    <p>
      <%= song.album %>
    </p>
    <form class="vote" method="post" action="/vote">
      <button class="btn waves-effect waves-light" type="submit" name="song_id" value="<%= song.id %>">Vote Up
      </button>
    </form>
    <div class="badge"><%= song.votes.count %></div>
  </div>
<% end %>

<form method="post" action="/signup">
  <div>
    <label>First Name:</label>
    <input type="text" name="first_name" value="<%= @user && @user.first_name %>">
  </div>
  <div>
    <label>Last Name:</label>
    <input type="text" name="last_name" value="<%= @user && @user.last_name %>">
  </div>
  <div>
    <label>Email:</label>
    <input type="text" name="email" value="<%= @user && @user.email %>">
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="password" value="<%= @user && @user.password %>">
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
  </button>
</form>
